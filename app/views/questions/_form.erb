<%= form_with model: @question, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true, minlength: 5, placeholder: "Title" %>
  </div>

  <div class="mb-3">
    <%= f.label :body, class: "form-label" %>
    <%= f.text_area :body, class: "form-control", required: true, minlength: 5, placeholder: "Content" %>
  </div>

  <div>
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>